@model IEnumerable<OnlineCasino.Domain.Entities.Player>

@{
    ViewData["Title"] = "Správa hráčů";
}

<h1>Správa hráčů</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Vytvořit nového hráče</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Balance</th>
            <th>Vytvořeno</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Username</td>
                <td>@item.Email</td>
                <td>@item.Balance Kč</td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detail</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Upravit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>
