                <div class="card-body text-center">
                    @if (ViewBag.IsWin)
                    {
                        <div class="alert alert-success">
                            <h3>@ViewBag.Result</h3>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h3>@ViewBag.Result</h3>
                        </div>
                    }

                    <!-- Dealer's hand -->
                    <div class="mb-5">
                        <h4 class="mb-3">üé© Dealer</h4>
                        <div class="d-flex justify-content-center align-items-center">
                            @foreach (var card in ViewBag.DealerCards)
                            {
                                <div class="playing-card mx-2">@card</div>
                            }
                        </div>
                        <h5 class="mt-3">Sk√≥re: @ViewBag.DealerScore</h5>
                    </div>

                    <hr class="border-warning" />

                    <!-- Player's hand -->
                    <div class="mb-4">
                        <h4 class="mb-3">üë§ Vy</h4>
                        <div class="d-flex justify-content-center align-items-center">
                            @foreach (var card in ViewBag.PlayerCards)
                            {
                                <div class="playing-card mx-2">@card</div>
                            }
                        </div>
                        <h5 class="mt-3">Sk√≥re: @ViewBag.PlayerScore</h5>
                    </div>

                    <div class="result-info my-4">
                        <h4>S√°zka: <span class="text-warning">@ViewBag.BetAmount Kƒç</span></h4>
                        @if (ViewBag.IsWin && ViewBag.WinAmount > ViewBag.BetAmount)
                        {
                            <h4>V√Ωhra: <span class="text-success">@ViewBag.WinAmount Kƒç</span></h4>
                            <h4>Zisk: <span class="text-success">+@(ViewBag.WinAmount - ViewBag.BetAmount) Kƒç</span></h4>
                        }
                        else if (ViewBag.IsWin && ViewBag.WinAmount == ViewBag.BetAmount)
                        {
                            <h4>Rem√≠za - vr√°cena s√°zka: <span class="text-info">@ViewBag.BetAmount Kƒç</span></h4>
                        }
                        else
                        {
