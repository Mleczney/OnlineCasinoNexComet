                        }
                        <h4>Nov√Ω z≈Østatek: <span class="text-info">@Context.Session.GetDecimal("Balance") Kƒç</span></h4>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Play" class="btn btn-danger btn-lg">
                            üîÑ HR√ÅT ZNOVU
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">
                            üè† DOM≈Æ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            box-shadow: 0 0 20px rgba(220, 53, 69, 0.3);
        }

        .playing-card {
            width: 80px;
            height: 120px;
            background: white;
            border: 2px solid #333;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            font-weight: bold;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .result-info h4 {
            margin: 15px 0;
        }
    </style>
}
